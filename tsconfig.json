{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./lib",
        "declaration": true,
        "sourceMap": true
    },
    "include": ["lib/**/*"],
    "exclude": ["node_modules", "dist", "lib/**/*.spec.ts"]
}
