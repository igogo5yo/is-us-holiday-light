{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020"],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./lib",
        "declaration": true,
        "sourceMap": true
    },
    "include": ["./lib/index.ts"],
    "exclude": ["node_modules", "./lib/index.spec.ts"]
}
